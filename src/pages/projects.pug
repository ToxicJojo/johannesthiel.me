section 
  h1.project-heading Projects
  ul.project-list
    each project in collections.projects
      li
        .project-row(style=`background-image: ${project.data.gradient}`)
          h2.project-row__title= project.data.title
          ul.project-row__tech-list
            each tech in project.data.tech
              li.project-row__tech(style=`color: #${project.data.color}`)= tech
          img(src=project.data.image).project-row__image
          //ul.project-row__tech-list
            each tech in project.data.tech
              li.project-row__tech(style=`color: #${project.data.color}`)= tech
          p.project-row__description= project.data.description
          .project-row__links
            a.project-row__link(href=project.data.website) Website
            a.project-row__link(href=project.data.github) Github

